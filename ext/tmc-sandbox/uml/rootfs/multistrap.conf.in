[General]
arch=__ARCH__
directory=./output/chroot
cleanup=false  # We'll tell squashfs to exclude the downloaded packages
unpack=true
debootstrap=Debian Updates DebianBackports R
aptsources=Debian Updates DebianBackports
setupscript=./build-scripts/before-dpkg-setup.sh

[Debian]
packages=makedev locales build-essential g++ nano procps xvfb iproute net-tools iputils-ping curl wget rsync libxrender-dev libxtst-dev check pkg-config valgrind libxslt-dev libxml2-dev libreadline7 libreadline-dev curl git-core zlib1g zlib1g-dev libssl-dev libyaml-dev libsqlite3-dev sqlite3 libxml2-dev libxslt-dev autoconf libc6-dev libgdbm-dev ncurses-dev automake libtool bison subversion libffi-dev openssl libxrender-dev libxtst-dev xmlstarlet python3 python2.7 python-pip python-virtualenv openjdk-8-jdk openjfx python3-numpy python3-scipy python3-matplotlib python3-tk qt5-qmake libcurl4-openssl-dev qt5-default
source=http://ftp.fi.debian.org/debian
keyring=debian-archive-keyring
suite=stretch

[DebianBackports]
packages=
source=http://ftp.fi.debian.org/debian
keyring=debian-archive-keyring
suite=stretch-backports

[Updates]
packages=
source=http://security.debian.org/
keyring=debian-archive-keyring
suite=stretch/updates

[R]
packages=r-base r-base-dev r-recommended
source=https://cran.r-project.org/bin/linux/debian/stretch-cran34/
keyring=debian-archive-keyring

# Download http://ftp-master.debian.org/archive-key-6.0.asc and apt-key add it if on ubuntu or similar
