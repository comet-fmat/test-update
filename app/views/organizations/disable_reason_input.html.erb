<p>
  <strong>You are about to disable organization <%= @organization.name %></strong>
</p>

<%= form_for(@organization, url: disable_organization_url(@organization), method: :post) do |f| %>
  <%= render 'shared/error_messages', target: @organization %>

  <div class="field">
    <%= f.label :disabled_reason, 'Reason:' %><br>
    <%= f.text_area :disabled_reason %>
  </div>
  <div class="actions">
    <%= f.submit 'Disable organization', class: 'btn btn-danger' %>
  </div>
<% end %>